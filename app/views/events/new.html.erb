<h1>Add a new event</h1>


<%= simple_form_for(@event) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :event_type %>
  <%= f.input :event_type, collection: Event.event_types.keys.to_a %>

  <div class='input-group'>
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time, class: "form-control", placeholder: "Event start date", id: "event_start_time" %>
  </div>
  <div class='input-group'>
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time, class: "form-control", placeholder: "Event end date", id: "event_end_time" %>
  </div>


  <div class='input-group'>
    <%= f.label :deadline %>
    <%= f.datetime_field :deadline, class: "form-control", placeholder: "Event deadline", id: "event_deadline" %>
  </div>

  <%= f.association :locations %>

  <%= f.submit "Create the event", class: "btn btn-primary" %>
<% end %>



