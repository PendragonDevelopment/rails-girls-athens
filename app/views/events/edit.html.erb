<h1>Edit Event</h1>
<%= simple_form_for @event do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <div class="form-group col-md-6">
    <div class='input-group'>
      <%= f.datetime_field :start_time, class: "form-control", placeholder: "Event start date", id: "event_start_time" %>
    </div>
    <div class='input-group'>
      <%= f.datetime_field :end_time, class: "form-control", placeholder: "Event end date", id: "event_end_time" %>
    </div>
  </div>

  <%= f.submit "Update event" %>
<% end %>